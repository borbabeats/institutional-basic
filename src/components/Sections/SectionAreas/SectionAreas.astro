---
import styles from './SectionAreas.module.scss';
import Button from '../../Button/Button.astro';

const areas = [
  {
    title: 'Direito Empresarial',
    description: 'Assessoria jurídica completa para empresas, incluindo contratos, fusões e aquisições, e compliance.',
    icon: 'business'
  },
  {
    title: 'Direito Tributário',
    description: 'Planejamento tributário, consultoria e defesa em processos administrativos e judiciais.',
    icon: 'account_balance'
  },
  {
    title: 'Direito Trabalhista',
    description: 'Assessoria em relações trabalhistas, negociações coletivas e defesa em processos trabalhistas.',
    icon: 'work'
  },
  {
    title: 'Direito Civil',
    description: 'Atuação em questões contratuais, responsabilidade civil, direito de família e sucessões.',
    icon: 'gavel'
  },
  {
    title: 'Direito Imobiliário',
    description: 'Assessoria em transações imobiliárias, regularização de imóveis e ações possessórias.',
    icon: 'home'
  },
  {
    title: 'Direito Digital',
    description: 'Proteção de dados, compliance LGPD, contratos de tecnologia e crimes cibernéticos.',
    icon: 'security'
  }
];
---

<section class={styles.sectionAreas}>
  <div class={styles.sectionAreas__container}>
    <div class={styles.sectionAreas__header}>
      <span class={styles.sectionAreas__header__subtitle}>Sobre nós</span>
      <h2 class={styles.sectionAreas__header__title}>Áreas de Atuação</h2>
    </div>
    
    <div class={styles.sectionAreas__grid}>
      {areas.map((area) => (
        <div class={styles.sectionAreas__card}>
          <div class={styles.sectionAreas__card__icon}>
            <span class="material-icons" style="color: var(--accent-color);">{area.icon}</span>
          </div>
          <h3 class={styles.sectionAreas__card__title}>{area.title}</h3>
          <p class={styles.sectionAreas__card__description}>{area.description}</p>
        </div>
      ))}
    </div>
    
    <div class={styles.sectionAreas__buttonContainer}>
      <Button href="/contato" class={styles.sectionAreas__button}>Fale com nossos especialistas</Button>
    </div>
  </div>
</section>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
