---
interface Props {
  width?: string | number;
  height?: string | number;
  className?: string;
}

const { width = 40, height = 40, className = '' } = Astro.props;
---

<svg 
  width={width} 
  height={height} 
  viewBox="0 0 40 40" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
  class={className}
>
  <!-- Simple Scale -->
  <path d="M20 5V15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  <path d="M10 15H30" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  <path d="M10 25L5 35H35L30 25H10Z" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2"
        stroke-linejoin="round"/>
</svg>