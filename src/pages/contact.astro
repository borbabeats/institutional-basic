---
import "../styles/global.scss";
import style from './contact.module.scss';
import Layout from '../layouts/Layout.astro';
import Button from "../components/Button/Button.astro";
---

<Layout>
  <section class={style.contact_container}>
    <div class={style.contact_container__form}>
    <div class={style.contact_container__header}>
      <span class={style.contact_container__subtitle}>Contato</span>
      <h2 class={style.contact_container__title}>Entre em contato conosco</h2>
    </div>
    <form class={style.contact_container__form}>
      <div class={style.contact_container__form__group}>
        <div class={style.contact_container__form__input}>
        <label for="nome">Nome completo<span class={style.contact_container__required}>*</span>:</label><br />
        <input type="text" id="nome" name="nome" placeholder="Insira seu nome" required /><br />
        </div>
        <div class={style.contact_container__form__input}>
        <label for="email">Email<span class={style.contact_container__required}>*</span>:</label><br />
        <input type="email" id="email" name="email" placeholder="Insira seu email" required /><br />
        </div>
      </div>

      <div class={style.contact_container__form__group}>
        <div class={style.contact_container__form__input}>
        <label for="telefone">Telefone<span class={style.contact_container__required}>*</span>:</label><br />
        <input type="tel" id="telefone" name="telefone" placeholder="(XX) XXXXX-XXXX" required /><br />
        </div>
        <div class={style.contact_container__form__input}>
        <label for="assunto">Assunto<span class={style.contact_container__required}>*</span>:</label><br />
        <input type="text" id="assunto" name="assunto" placeholder="Insira o assunto" required /><br />
        </div>
      </div>

      <div class={style.contact_container__form__group}>
        <div class={style.contact_container__form__textarea}>
        <label for="mensagem">Mensagem<span class={style.contact_container__required}>*</span>:</label><br />
        <textarea id="mensagem" name="mensagem" placeholder="Insira sua mensagem" required></textarea><br />
        </div>
      </div>

      <Button type="submit" size="large">Enviar</Button>
    </form>
    </div>
  </section>
  <div class={style.contact_container__googleMaps}>
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3675.343511703012!2d-43.18421882433596!3d-22.90769947925814!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjLCsDU0JzI3LjciUyA0M8KwMTEnMDguNyJX!5e0!3m2!1sen!2sbr!4v1620000000000!5m2!1sen!2sbr" 
      width="100%" 
      height="450" 
      style="border:0;" 
      allowfullscreen="" 
      loading="lazy"
      title="Localização no Mapa"
    ></iframe>
  </div>
</Layout>
